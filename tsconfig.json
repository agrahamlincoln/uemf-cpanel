{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "sourceMap": true
  },
  "files": [
    "./src/app/app.spec.ts",
    "./src/app/app.ts",
    "./src/app/auth/auth.component.ts",
    "./src/app/auth/auth.service.ts",
    "./src/app/auth/user.interface.ts",
    "./src/app/documentManager/documentManager.ts",
    "./src/app/editor/editor.component.ts",
    "./src/app/editor/wysiwyg.component.ts",
    "./src/app/file-list/file.component.ts",
    "./src/app/file-list/file.interface.ts",
    "./src/app/file-list/fileEditor.component.ts",
    "./src/app/file-list/fileList.component.ts",
    "./src/app/file-list/filesize.pipe.ts",
    "./src/app/home/directives/x-large.spec.ts",
    "./src/app/home/directives/x-large.ts",
    "./src/app/home/home.component.ts",
    "./src/app/home/providers/title.spec.ts",
    "./src/app/home/providers/title.ts",
    "./src/app/shared/api.service.ts",
    "./src/app/shared/tiny-editor.ts",
    "./src/app/shared/tokenStorage.service.ts",
    "./src/main.ts",
    "./src/vendor.ts",
    "./test/injector.spec.ts",
    "./test/sanity-test.spec.ts"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  }
}
